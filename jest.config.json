{
  "transform": {
    "^.+\\.tsx?$": "ts-jest/legacy"
  },
  "testEnvironment": "node",
  "collectCoverage": true,
  "testMatch": [
    "<rootDir>/src/test/ts/**/*.ts"
  ],
  "extensionsToTreatAsEsm": [".ts"],
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.test.json",
      "useESM": true
    }
  }
}
